<Window x:Class="ProjetoPromoWPF.View.frmCadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoPromoWPF.View"
        mc:Ignorable="d"
        Title="frmCadastro" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Cadastro" VerticalAlignment="Center"
                   HorizontalAlignment="Center" FontSize="36" />

        <Button x:Name="btnEmpresaCadastro" Content="Cadastro Empresa" FontSize="22" HorizontalAlignment="Center"
                VerticalAlignment="Bottom" Margin="0,0,0,75" Click="BtnEmpresaCadastro_Click"/>

        <Button x:Name="btnClienteCadastro" Content="Cadastro Cliente" FontSize="22" HorizontalAlignment="Center"
                VerticalAlignment="Bottom" Margin="0,0,0,35" Click="BtnClienteCadastro_Click"/>

        <Button x:Name="btnBackToLogin" Content="Login" VerticalAlignment="Bottom" 
                HorizontalAlignment="Center" FontSize="20" Click="BtnBackToLogin_Click" />
    </Grid>
</Window>
